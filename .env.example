# Mode Configuration
# AUTH_MODE: "local" (no auth, default) or "clerk" (Clerk SaaS auth)
AUTH_MODE="local"
# EMBEDDING_PROVIDER: "local" (@xenova/transformers, default) or "openai"
EMBEDDING_PROVIDER="local"

# Database
DATABASE_URL="postgresql://agenttailor:agenttailor_dev@localhost:5433/agenttailor_dev"

# Redis
REDIS_URL="redis://localhost:6379"

# ChromaDB
CHROMA_URL="http://localhost:8100"
VECTOR_STORE_PROVIDER="chroma"

# Pinecone (production vector store)
PINECONE_API_KEY=""
PINECONE_ENVIRONMENT=""
PINECONE_INDEX=""

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""
CLERK_WEBHOOK_SECRET=""

# OpenAI
OPENAI_API_KEY=""
OPENAI_ORGANIZATION=""

# Tavily Search
TAVILY_API_KEY=""

# Brave Search (fallback)
BRAVE_API_KEY=""

# Server Configuration
NODE_ENV="development"
PORT="4000"
CORS_ORIGIN="http://localhost:5173"

# Dashboard Configuration
VITE_API_URL="http://localhost:4000"
VITE_CLERK_PUBLISHABLE_KEY=""

# Extension Configuration
VITE_EXT_API_URL="http://localhost:4000"
VITE_EXT_CLERK_PUBLISHABLE_KEY=""

# MCP Server Configuration
MCP_SERVER_NAME="agenttailor"
MCP_SERVER_VERSION="1.0.0"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Token Limits
MAX_TOKENS_GPT4="8000"
MAX_TOKENS_CLAUDE="100000"

# Feature Flags
ENABLE_WEB_SEARCH="true"
ENABLE_DOCUMENT_UPLOAD="true"
ENABLE_ANALYTICS="true"
